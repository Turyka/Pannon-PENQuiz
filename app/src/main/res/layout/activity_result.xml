<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:id="@+id/result_root_layout"
    tools:context="bk.penquiz.ResultActivity">


    <bk.penquiz.CoustomTextView.CoustomTextView
        android:id="@+id/result_congrat_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:textSize="25sp"
        android:text="Gratulálunk!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"/>


    <bk.penquiz.CoustomTextView.CoustomTextView
        android:id="@+id/result_result_text"
        android:layout_below="@+id/result_congrat_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="25dp"
        android:textSize="35sp"
        android:text="Eredmény: Mennyi:Mennyiből"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"/>

    <Button
        android:id="@+id/result_ok_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:text="Menü"
        android:textSize="30sp"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
